{% extends 'base.html.twig' %}

{% block title %}Modifer l'utilisateur{% endblock %}

{% block body %}

{{ form_start(form) }}
<fieldset class="border p-2">
    <legend>Modifier le mot de passe</legend>
    <table class="table table-sm table-bordered table-striped text-center">
        <tbody>
            <tr>
                <td width="12%">{{ form_row(form.lastPassword) }}</td>
                <td width="12%">{{ form_row(form.password.first) }}</td>
                <td width="13%">{{ form_row(form.password.second) }}</td>
                <td width="8%" class="align-middle">
                    <div class="d-grid gap-2">
                        <button class="btn btn-sm btn-success">{{ button_label|default('Modifier') }}</button>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</fieldset>
{{ form_end(form) }}

{% endblock %}